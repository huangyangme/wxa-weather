.wrapper {
  position: relative;
  box-sizing: border-box;
  height: 100%;
  font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
  color: #fff;
  background-color: #3a3a3a;
  background-repeat: no-repeat;
  background-position: center top;
  background-size: cover;
}

.header {
  padding-top: 20rpx;
  font-size: 32rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
}

.now-wrapper {
  position: absolute;
  bottom: 290rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  /*height: 180rpx;*/
  /*background: rgba(255, 255, 255, 0.2)*/
}

.now-temperature {
  margin: 0 30rpx;
  font-size: 160rpx;
  font-family: 'Dosis', sans-serif;
  line-height: 1;
  letter-spacing: 8rpx;
  text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.075);
}

.now-temperature-small {
  font-size: 40rpx;
  line-height: 1;
}

.now-code {
  margin-bottom: 10rpx;
  font-size: 90rpx;
  text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.075);
}

.now-wind {
  font-size: 26rpx;
  color: rgba(255,255,255,.8);
  text-shadow: 0 1px 3px rgba(0,0,0,.4), 0 0 30px rgba(0,0,0,.075);
}

.forecast {
  position: absolute;
  bottom: 0;
  width: 100%;
  padding: 20rpx 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  text-align: center;
  font-size: 32rpx;
  color: #52BDFC;
  /*background: #fff;*/
  background-color: rgba(255, 255, 255, 0.9);
}

.forecast::before {
  content: '';
  position: absolute;
  top: -90rpx;
  width: 0;
  height: 0;
  border-style: solid;
  border-width: 90rpx 0 0 750rpx;
  /*border-color: transparent transparent transparent #fff;*/
  border-color: transparent transparent transparent rgba(255, 255, 255, 0.9);
}

.forecast-column {
  display: flex;
  flex-direction: column;
  width: 100%;
  font-size: 24rpx;
}

.forecast-date {
}

.forecast-skycon {
  margin: 10rpx 0;
  font-size: 40rpx;
}


.forecast-temperature {
  font-weight: 300;
}