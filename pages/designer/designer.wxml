<!--pages/designer/designer.wxml-->
<view class="wrapper" style="background-image: url({{image}})">
<view class="header">{{nowData.location.name}},{{nowData.location.country}}</view>

<view class="now-wrapper">
  <view class="now-temperature">{{nowData.now.temperature}}<text class="now-temperature-small">°</text></view>
  <view class="">
    <view class="now-icon"><text class="weather-icon">A</text>{{nowData.now.code}}</view>
    <view class="now-wind">{{nowData.now.wind_direction}}风{{nowData.now.wind_scale}}级 湿度{{nowData.now.humidity}}%</view>
  </view>
</view>

<view class="forecast">
  <view class="forecast-column">
    <text class="forecast-day">Tue</text>
    <text class="forecast-temperature">34°</text>
    <text class="forecast-skycon">Sunny</text>
  </view>
  <view class="forecast-column">
    <text class="forecast-day">Wed</text>
    <text class="forecast-temperature">12°</text>
    <text class="forecast-skycon">Sunny</text>
  </view>
  <view class="forecast-column">
    <text class="forecast-day">Tue</text>
    <text class="forecast-temperature">2°</text>
    <text class="forecast-skycon">Sunny</text>
  </view>
</view>

</view>


