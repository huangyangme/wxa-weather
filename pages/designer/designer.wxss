@font-face {
  font-family: 'weather-icon';
  font-style: normal;
  font-weight: 400;
  src: url("http://7xlcqu.media1.z0.glb.clouddn.com/weatherFont.ttf");
}

.weather-icon {
  font-family: 'weather-icon', sans-serif;
}


.color-green {
  color: #2dc49a;
}

.color-red {
  color: #ff3900;
}

.color-purple {
  color: #9f61ff;
}

.wrapper {
  position: relative;
  box-sizing: border-box;
  height: 100%;
  font-family: "Helvetica Neue", Helvetica, STHeiTi, sans-serif;
  font-weight: 300;
  line-height: 1.6;
  color: #fff;
  background-color: #3a3a3a;
  background-repeat: no-repeat;
  background-position: center top;
  background-size: cover;
}

.header {
  font-size: 32rpx;
  text-align: center;
  color: rgba(255, 255, 255, 0.9);
}

.now-wrapper {
  position: absolute;
  bottom: 260rpx;
  display: flex;
  flex-direction: row;
  height: 180rpx;
  background: rgba(255, 255, 255, 0.6)
}

.now-temperature {
  margin: 0 30rpx;
  font-size: 160rpx;
  font-family: 'Dosis', sans-serif;
  line-height: 1;
  letter-spacing: 8rpx;
}

.now-temperature-small {
  font-size: 40rpx;
  line-height: 1;
}

.now-wind {
  font-size: 26rpx;
}

.forecast {
  position: absolute;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  bottom: 20rpx;
  font-size: 32rpx;
  color: #52BDFC;
  background: #fff;
}

.forecast-column {
  display: flex;
  width: 100%;
  justify-content: space-between;
}